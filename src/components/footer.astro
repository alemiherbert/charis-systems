---
// @ts-ignore
import { Icon } from "astro-icon/components";
---
<footer class="mt-20 bg-slate-900 py-12">
  <div class="container mx-auto px-4">
    <!-- Grid Container -->
    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-3 lg:gap-20 md:gap-10">
      <!-- Section 1: About -->
      <div class="text-center md:text-left">
        <h3 class="text-lg font-semibold text-white">About Us</h3>
        <p class="mt-2 text-sm text-slate-400">
          We are a team of passionate developers building amazing tools for the web.
        </p>
      </div>

      <!-- Section 2: Quick Links -->
      <div class="text-center md:text-left">
        <h3 class="text-lg font-semibold text-white">Quick Links</h3>
        <ul class="mt-2 space-y-2">
          <li><a href="/privacy-policy" class="text-sm text-slate-400 hover:text-white hover:underline">Privacy Policy</a></li>
          <li><a href="/terms-of-service" class="text-sm text-slate-400 hover:text-white hover:underline">Terms of Service</a></li>
          <li><a href="/contact" class="text-sm text-slate-400 hover:text-white hover:underline">Contact Us</a></li>
        </ul>
      </div>

      <!-- Section 3: Social Media -->
      <div class="text-center md:text-left">
        <h3 class="text-lg font-semibold text-white">Follow Us</h3>
        <div class="flex justify-center md:justify-start gap-4 mt-2">
          <!-- Twitter -->
          <a href="https://x.com/charissystems" target="_blank" rel="noopener">
            <Icon class="size-6 text-slate-400 hover:text-blue-400 transition-colors" name="simple-icons:twitter" />
          </a>
          <!-- LinkedIn -->
          <a href="https://linkedin.com/charissystems" target="_blank" rel="noopener">
            <Icon class="size-6 text-slate-400 hover:text-blue-600 transition-colors" name="simple-icons:linkedin" />
          </a>
          <!-- GitHub -->
          <a href="https://github.com/charissystems" target="_blank" rel="noopener">
            <Icon class="size-6 text-slate-400 hover:text-gray-300 transition-colors" name="simple-icons:github" />
          </a>
        </div>
      </div>
    </div>

    <!-- Copyright Section -->
    <div class="text-center text-sm text-slate-400 mt-10">
      <p>Copyright Â© {new Date().getFullYear()} Charis Systems. All rights reserved.</p>
    </div>
    
    <!-- Attribution Section -->
    <div class="text-center text-xs text-slate-400 mt-2">
      <p>
        Built with Astro JS and Tailwind CSS
      </p>
    </div>
  </div>
</footer>
