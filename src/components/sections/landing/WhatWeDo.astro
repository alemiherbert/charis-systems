---
const features = [
    {
        title: "ERP Consultancy & Implementation",
        description:
            "Unified factory management integrating inventory to finance into a single source of truth.",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
  <rect x="3" y="3" width="7" height="9" rx="1"/>
  <rect x="14" y="3" width="7" height="5" rx="1"/>
  <rect x="14" y="12" width="7" height="9" rx="1"/>
  <rect x="3" y="16" width="7" height="5" rx="1"/>
  <path d="M10 7h4"/>
  <path d="M10 18h4"/>
  <path d="M7 12v4"/>
  <path d="M17 8v4"/>
</svg>`,
    },
    {
        title: "SCADA Consultancy & Implementation",
        description:
            "Custom pipelines using Ignition and Node-RED for granular factory floor visibility.",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
  <rect x="2" y="6" width="4" height="12" rx="1"/>
  <rect x="10" y="3" width="4" height="18" rx="1"/>
  <rect x="18" y="8" width="4" height="8" rx="1"/>
  <circle cx="4" cy="9" r="1" fill="currentColor"/>
  <circle cx="12" cy="6" r="1" fill="currentColor"/>
  <circle cx="20" cy="11" r="1" fill="currentColor"/>
  <path d="M4 13v2"/>
  <path d="M12 10v6"/>
  <path d="M20 14v0"/>
  <path d="M6 12h4"/>
  <path d="M14 12h4"/>
</svg>`,
    },
    {
        title: "Custom Software Design and Development",
        description:
            "Tailored solutions for unique challenges when off-the-shelf software isn't enough.",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
  <rect x="3" y="4" width="18" height="16" rx="2"/>
  <path d="M3 8h18"/>
  <circle cx="6" cy="6" r="0.5" fill="currentColor"/>
  <circle cx="8.5" cy="6" r="0.5" fill="currentColor"/>
  <circle cx="11" cy="6" r="0.5" fill="currentColor"/>
  <path d="M7 12l-2 2 2 2"/>
  <path d="M17 12l2 2-2 2"/>
  <path d="M14 11l-4 6"/>
</svg>`,
    },
];
---

<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
    <!-- Heading -->
    <div class="mx-auto mb-8 max-w-2xl text-center lg:mb-14">
        <h2
            class="text-2xl font-bold text-neutral-800 md:text-4xl md:leading-tight dark:text-neutral-200"
        >
            What <span class="text-yellow-500 dark:text-yellow-400">We Do</span>
        </h2>
        <p class="mt-1 text-gray-600 dark:text-neutral-400">
            End-to-end solutions for industrial automation and enterprise systems.
        </p>
    </div>

    <!-- Grid -->
    <div class="grid gap-6 lg:grid-cols-3 lg:gap-8">
        {
            features.map((feature) => (
                <div class="group relative flex h-full min-h-[300px] flex-col justify-end overflow-hidden rounded-xl border border-neutral-200 bg-neutral-100 p-6 transition dark:border-neutral-700 dark:bg-neutral-800">
                    
                    <!-- Content -->
                    <div class="relative z-10">
                        <h3 class="text-xl font-bold text-neutral-800 group-hover:text-yellow-600 dark:text-neutral-200 dark:group-hover:text-yellow-400">
                            {feature.title}
                        </h3>
                        <p class="mt-3 text-neutral-600 dark:text-neutral-400">
                            {feature.description}
                        </p>
                    </div>

                    <!-- SVG Icon Watermark Background -->
                    <div class="pointer-events-none absolute top-0 right-0 bottom-0 h-full w-auto translate-x-1/4 translate-y-1/4 transform text-neutral-400 opacity-20 transition-transform duration-500 group-hover:scale-110">
                        <Fragment
                            set:html={feature.icon.replace(
                                'class="w-6 h-6"',
                                'class="h-full w-auto"',
                            )}
                        />
                    </div>
                </div>
            ))
        }
    </div>
    <!-- End Grid -->
</section>
